{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(asctime)s]  %(name)s::%(levelname)s - %(message)s"
    },
    "detailed": {
      "format": "[%(asctime)s] %(levelname)s: %(message)s  <in %(name)s.%(funcName)s:%(lineno)d)>"
    },
    "simple_with_proc": {
      "format": "[%(asctime)s] %(processName)s %(threadName)s %(levelname)s - %(message)s"
    },
    "fluent_fmt": {
      "()": "fluent.handler.FluentRecordFormatter",
      "format": {
        "level": "%(levelname)s",
        "hostname": "%(hostname)s",
        "where": "%(module)s.%(funcName)s"
      }
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "NOTSET",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "console_logs": {
      "class": "walkoff.appgateway.console.ConsoleLoggingHandler",
      "level": "NOTSET",
      "formatter": "simple"
    },
    "file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "NOTSET",
      "formatter": "simple",
      "filename": "data/log/log.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },
    "file_handler_with_proc": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "NOTSET",
      "formatter": "simple_with_proc",
      "filename": "data/log/log.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },
    "fluent": {
      "class": "fluent.handler.FluentHandler",
      "host": "localhost",
      "port": 24224,
      "tag": "fluent.logging",
      "buffer_overflow_handler": "walkoff.config.fluent_overflow_handler",
      "formatter": "fluent_fmt",
      "level": "NOTSET"
    }
  },
  "loggers": {
    "walkoff": {
      "level": "INFO",
      "handlers": ["file_handler", "fluent"]
    },
    "apps": {
      "level": "DEBUG",
      "handlers": ["file_handler", "console_logs", "fluent"]
    },
    "connexion": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "passlib": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "zmq": {
      "level": "INFO",
      "handlers": ["file_handler"]
    },
    "swagger_spec_validator": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "walkoff.appgateway.appcache": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "walkoff.server.app": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "walkoff.executiondb": {
      "level": "WARNING",
      "handlers": ["file_handler_with_proc"]
    },
    "walkoff.multiprocessedexecutor": {
      "level": "INFO",
      "handlers": ["file_handler_with_proc"]
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console"]
  }
}